{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES6",
      "es2021",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDir": "./",
    "outDir": "build"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "prisma"
  ],
  "ts-node": {
    "swc": true
  }
}